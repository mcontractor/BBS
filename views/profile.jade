doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Profile
    link(href='stylesheets/bootstrap.css', rel='stylesheet')
    link(href='stylesheets/borrowscreen.css', rel='stylesheet')
    link(rel="stylesheet" href="https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css")
    style.
      .round {
      border-radius: 50%;
      overflow: hidden;
      width: 150px;
      height: 150px;
      }
      .round img {
      display: block;
      min-width: 100%;
      min-height: 100%;
      }
  body(style='background: white')
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a(href='/main')
            img(src='images/BBS_logo2-4.png')
        div
          br
          a(href='')
            .text(style='float: right; margin-top: 50px; font-size: 20px; color: #FFFFFF')
              b !{name122}
            form.navbar-form.pull-right
              .dropdown
                a.dropdown-toggle(href='#', style='color:#FFFFFF; font-size:50px; float: right;', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | ? 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/contact_us') About Us
                  li
                    a(href='/contact_us') Contact Us
                  li
                    a(href='/logout') Log Out
            span
              a(href = "/community")
                img#globe(align='right', src='images/globe.png')
      // /.container-fluid
    .col-md-3
      center
          img(src=link1, width='85%',height='85%')
      br 
      h4(style='text-align: center;') User points: 
      .col-md-12(style='margin-top: 20px')
        a.btn.btn-primary.btn-lg.btn-block.btn-huge(href='/changePass') Change Password
      .col-md-12(style='margin-top: 20px')
        a.btn.btn-primary.btn-lg.btn-block.btn-huge(href='/profile_picture2') Change Picture

    .col-md-8(style='')
      .container
        .row
          .col-md-8
            // Nav tabs
            ul.nav.nav-tabs(role='tablist')
              li.active(role='presentation')
                a(href='/profile')
                  i.fa.fa-user
                  span Ads
              li.active(role='presentation')
                a(href='/profile?1=1')
                  i.fa.fa-user
                  span Requests
      each val in array
        if (val != undefined)
          if (val1 == 0)
            hr
            .container
              .row
                .list-group
                  .media.col-md-3
                    figure.pull-left
                      img.media-object.img-rounded.img-responsive(src='ads/'+val.email+'/'+val.name+'/1.jpg', width='50%',height='50%')
                  .col-md-3
                    h3.list-group-item-heading
                      | Title:
                      | !{val.title}
                    br
                    h4.list-group-item-heading
                      | Name:
                      | !{val.name} 
                    br
                    h4.list-group-item-text
                      | Description: 
                      | !{val.description}
                  .col-md-3.text-center
                    h4
                      | Price: 
                      | !{val.price}
                    br 
                    h4
                      | Contact Information:
                      |  !{val.contact}     
          if (val1 == 1)
            hr
            .container
              .row
                .list-group
                  .media.col-md-3
                    figure.pull-left
                      img.media-object.img-rounded.img-responsive(src='requests/'+val.email+'/'+val.name+'/1.jpg', width='50%',height='50%')
                  .col-md-6
                    h3.list-group-item-heading
                      | Title:
                      | !{val.title}
                    br
                    h4.list-group-item-heading
                      | Name:
                      | !{val.name} 
                    br
                    h4.list-group-item-text
                      | Description: 
                      | !{val.description}
                    br 
                    h4
                      | Contact Information:
                      |  !{val.contact}
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='javascripts/bootstrap.min.js')

