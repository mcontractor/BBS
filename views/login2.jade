      .row(style='margin-top:5px')
        .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
          form#login(role='form', method='post', action='/login2/submit')
            fieldset
              center
                h2 Log In
              hr.colorgraph
              .alert.alert-error
                a.close(data-dismiss='alert',style='fontsize:20px' href='#') Ã—
                | Invaild Username or Password!
              .form-group
                input#email.form-control.input-lg(type='email', name='email', placeholder='Email Address')
